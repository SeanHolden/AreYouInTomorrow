<div id="myweek-title">
  <h2><span id="greeting"></span>Are you in this week?</h2>
  <p><strong>(commencing <%= thisMonday %>)</strong></p>
</div>

<form action="/myweek" method="post">
  <input type="hidden" name="weekcommencing" value="<%= weekCommencing %>" />
  <input type="hidden" id="token" name="token" value="" />
  <table style="width:100%;">
    <tr>
      <td class="labels">
        <label for="monday">Monday: </label>
      </td>
      <td>
        <input id="monday" name="monday" type="checkbox" class="switch" />
      </td>
    </tr>
    <tr>
      <td class="labels">
        <label for="tuesday">Tuesday: </label>
      </td>
      <td>
        <input id="tuesday" name="tuesday" type="checkbox" class="switch" />
      </td>
    </tr>
    <tr>
      <td class="labels">
        <label for="wednesday">Wednesday: </label>
      </td>
      <td>
        <input id="wednesday" name="wednesday" type="checkbox" class="switch" />
      </td>
    </tr>
    <tr>
      <td class="labels">
        <label for="thursday">Thursday: </label>
      </td>
      <td>
        <input id="thursday" name="thursday" type="checkbox" class="switch" />
      </td>
    </tr>
    <tr>
      <td class="labels">
        <label for="friday">Friday: </label>
      </td>
      <td>
        <input id="friday" name="friday" type="checkbox" class="switch" />
      </td>
    </tr>
    <tr style="text-align:center;">
      <td colspan="2">
        <br />
        <input type="submit" value="DONE" class="submit_myweek" />
      </td>
    </tr>
  </table>

</form>


<script src="/js/myweek.js" type="text/javascript"></script>